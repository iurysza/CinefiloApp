<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    tools:background="@color/appLightBlack"
    >


  <android.support.v7.widget.RecyclerView
      android:id="@+id/genre_filter_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      tools:listitem="@layout/genre_grid_item"
      />

  <TextView
      android:id="@+id/genre_filter_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:background="@color/appLightBlack"
      android:text="With Genres"
      android:textColor="@color/appFilterTextColor"
      android:textSize="@dimen/standard_text_size"
      />


</RelativeLayout>
