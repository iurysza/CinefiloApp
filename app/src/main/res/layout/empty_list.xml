<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/empty_list_layout"
    android:visibility="gone"
    >

  <ImageView
      android:id="@+id/empty_list_background_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:scaleType="centerCrop"
      android:src="@drawable/pulpfiction"
      />

  <TextView
      android:id="@+id/empty_list_background_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:textStyle="italic"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/empty_list_background_image"
      android:text=" - Filter that thing again!\n - I dare you!\n - I double dare you!"
      />

</RelativeLayout>