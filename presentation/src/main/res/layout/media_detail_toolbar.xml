<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <android.support.design.widget.AppBarLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/appbar_detail_media"
      android:layout_width="match_parent"
      android:layout_height="@dimen/detail_appbar_size"
      android:fitsSystemWindows="true"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:title=""
      >


    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_detail_media"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleGravity="center"
        app:expandedTitleMarginEnd="64dp"
        app:layout_collapseMode="parallax"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
        app:title=""

        >

      <com.flaviofaria.kenburnsview.KenBurnsView
          android:id="@+id/image_backdrop_detail_media"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:fitsSystemWindows="true"
          tools:src="@drawable/placeholder"
          android:alpha=".55"
          android:visibility="gone"
          app:layout_collapseMode="parallax"
          />

      <ImageView
          android:layout_width="wrap_content"
          android:id="@+id/detail_backdrop_play_btn"
          android:layout_gravity="center"
          android:background="@drawable/ic_play_circle_outline_white_24dp"
          android:layout_height="wrap_content"
          />

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar_detail_media"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="@color/space_transparent"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          />

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

</merge>