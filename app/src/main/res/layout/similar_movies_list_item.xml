<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    >

  <ImageView
      android:id="@+id/similar_movie_poster"
      android:layout_width="match_parent"
      android:transitionName="@string/poster_card_transition"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:alpha=".8"
      android:id="@+id/similar_movie_overlay"
      android:background="@drawable/similar_movie_gradient_bg"
      >

  </FrameLayout>

  <TextView
      android:id="@+id/similar_movie_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center|bottom"
      android:gravity="center_horizontal"
      android:maxLines="1"
      android:padding="8dp"
      android:textSize="@dimen/standard_text_size"
      android:text="Movie Name"
      android:textColor="@color/white"
      />

</FrameLayout>