<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    tools:background="@color/appLightBlack"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="4dp"
      android:layout_marginTop="4dp"
      android:layout_marginLeft="16dp"
      android:alpha=".8"
      android:id="@+id/genre_filter_title"
      android:text="With Genres"
      android:textColor="@color/appGrey"
      android:textSize="@dimen/standard_text_size"
      >

  </TextView>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/genre_filter_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior=""
      android:layout_below="@id/genre_filter_title"
      tools:listitem="@layout/genre_grid_item"
      >

  </android.support.v7.widget.RecyclerView>
</RelativeLayout>
